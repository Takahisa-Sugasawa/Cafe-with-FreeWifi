<h1>投稿一覧</h1>

<!--検索機能-->
<%= search_form_for @search do |f| %>
  # nameカラムに対して部分一致検索ができる
  <%= f.label :store_name_cont, "店名" %>
  <%= f.search_field :store_name_cont %>

  <!--検索ボタン-->
  <div class="actions"><%= f.submit "検索" %></div>
<% end %>

<% @articles.each do |article| %>
  <div class="card col-md-6 offset-md-3" >
    <img class="card-img-top" >
    <!--<%= image_tag article.image.thumb.url,class:"card-img-top" %>-->
    <%= image_tag article.image.thumb.url%>
    <div class="card-body">
      <h4 class="card-title"><%= article.store_name %></h4>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of </p>
      <%= link_to '詳細', article %>
      <% if !current_user.nil? && current_user.admin? %>
        <%= link_to '編集', edit_article_path(article) %>
        <%= link_to '削除', article_path(article), 
          method: :delete, data: {confirm: '削除してもよろしいですか？'}%>
      <% end %>
      <p>いいねマーク</p>
    </div>
  </div>
<% end %>