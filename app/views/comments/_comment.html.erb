<% if user_signed_in? %>
  <h2>コメント</h2>
  <p>
  <strong>名前：</strong>
  <%= comment.user.username %>
  </p>
      
  <p>
    <strong>タイトル：</strong>
    <%= comment.title %>
  </p>
       
  <p>
    <strong>内容：</strong>
    <%= simple_format comment.content %>
  </p>
      
  <p>
    <%= link_to '削除', [comment.article, comment],
                method: :delete, data: { confirm: '削除しますか？' } %>
  </p>
<% end%>
