<% if user_signed_in?%>
  <%= form_for [@article, @comment] do |f| %>
    <div class="col-md-6 offset-md-3 form-group">
      <%= f.label :title, "タイトル（任意）"%><br>
      <%= f.text_field :title ,class: 'form-control'%>
    </div>
    <div class="col-md-6 offset-md-3 form-group">
      <%= f.label :content, "内容（必須）" %><br>
      <%= f.text_area :content, cols: 60, rows: 8,class: 'form-control' %>
    </div>
    <div class="col-md-6 offset-md-3 form-group">
      <%= f.submit "口コミを投稿する", class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>